<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyMensaje"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescripcionEmpleado">

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="331dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        android:text="HOLA"
        app:layout_constraintEnd_toEndOf="@+id/ivFotografia"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/ivFotografia"
        app:layout_constraintTop_toBottomOf="@+id/ivFotografia" />

    <TextView
        android:id="@+id/tvCargo"
        android:layout_width="324dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tvNombre"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="@+id/tvNombre"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre" />

    <TextView
        android:id="@+id/tvEmpresa"
        android:layout_width="323dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tvCargo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvCargo"
        app:layout_constraintTop_toBottomOf="@+id/tvCargo" />

    <ImageView
        android:id="@+id/ivFotografia"
        android:layout_width="160dp"
        android:layout_height="175dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lead_photo_1" />
</androidx.constraintlayout.widget.ConstraintLayout>